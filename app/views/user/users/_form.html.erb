<div class="card">
  <div class="card-body">
    <%= form_with(model: [:admin, admin], local: true)  do |f| %>
      <%= render "layouts/form_errors", record: admin %>
      <div class="row g-3">
        <div class="col-sm-12">
          <label for="name" class="form-label">Nome</label>
          <%= f.text_field :name, class: "form-control", placeholder: "Nome completo"  %>
        </div>

        <div class="col-sm-12">
          <label for="email" class="form-label">Email</label>
          <%= f.text_field :email, class: "form-control", placeholder: "E-mail"  %>
        </div>

        <div class="col-sm-12">
          <label for="phone" class="form-label">Telefone</label>
          <%= f.text_field :phone, class: "form-control", placeholder: ""  %>
        </div>

        <div class="col-sm-12">
          <label for="avatar" class="form-label">Avatar</label>
          <%= f.text_field :avatar, class: "form-control", placeholder: ""  %>
        </div>

        <div class="col-6">
          <label for="password" class="form-label">Senha</label>
          <%= f.password_field :password, class: "form-control", placeholder: "******"  %>
        </div>

        <div class="col-6">
          <label for="password" class="form-label">Repita Senha</label>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "******"  %>
        </div>
      </div>
      <hr class="my-4">
      <button class="btn btn-primary" type="submit">Salvar</button>
      <%= link_to "Cancelar", admin_root_path, class: "btn btn-secondary"%>
    <% end %>
  </div>
</div>