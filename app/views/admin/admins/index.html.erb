<h4>Admins</h4><br>

<table class="table table-striped table-hover">
  <%= link_to "New admin", new_admin_admin_path, class: "btn btn-primary float-end" %>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Created at</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <th scope="row"><%= admin.id %></th>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= admin.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to "Edit", edit_admin_admin_path(admin), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to "Delete", admin_admin_path(admin), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>